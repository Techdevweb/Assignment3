<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Design6">

    <TableRow>
        <TextView
            android:text="Column1"
            android:textSize="30dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="10sp"
            />
        <Button
            android:text="Column2"
            android:textSize="20dp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="10sp"
            />
    </TableRow>
    <TableRow>
        <EditText
            android:layout_span="2"
            android:text="Column 1 &amp; 2"
            android:layout_marginHorizontal="20sp"
            android:layout_marginVertical="10sp"
            />
    </TableRow>
    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:background="#2196F3"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp"
        />
    <TableRow>
        <TextView android:layout_width="wrap_content" android:text="Column1" android:textSize="20dp"></TextView>
        <Button android:layout_width="wrap_content"
            android:layout_weight="1" android:text="Column2"></Button>
        <Button android:layout_marginHorizontal="10dp" android:text="Column3"></Button>

    </TableRow>

</TableLayout>